#:kivy 2.0.0

<PongBall>:
	size: 50, 50
	canvas:
		Ellipse:
			pos: self.pos
			size: self.size

<PongPaddle>:
	size: 25, 150
	canvas:
		Rectangle:
			pos: self.pos
			size: self.size

<PongGame>:
	ball: ball
	player_left: player_left
	player_right: player_right

	canvas:
		Rectangle:
			pos: self.center_x - 5, 0
			size: 10, self.height
	
	Label:
		font_size: 70
		center_x: root.width / 4
		top: root.top - 50
		text: str(root.player_left.score)
	
	Label:
		font_size: 70
		center_x: root.width / 4 * 3
		top: root.top - 50
		text: str(root.player_right.score)

	PongBall:
		id: ball
		center: root.center

	PongPaddle:
		id: player_left
		x: root.x + 40
		center_y: root.center_y

	PongPaddle:
		id: player_right
		x: root.x + root.width - self.width - 40
		center_y: root.center_y